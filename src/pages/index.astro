---
import { Image } from 'astro:assets'
import Form from '../components/Form.astro';
import Layout from '../layouts/Layout.astro';
import DottedPatterns from '../components/UI/DottedPatterns.astro';
---

<Layout>
	<div>
		<!-- Mobile image -->
		<div 
			class="absolute inset-0 block md:hidden bg-mobile-image bg-cover bg-center w-full opacity-10"
		></div>
		<!-- Tablet Image -->
		<div class="hidden md:block xl:hidden absolute top-0 right-0">
			<Image 
			src="/src/assets/tablet/image-host.jpg"
			alt="Logo"
			width="490" 
			height="787"
			/>
		</div>
		<!-- Desktop Image -->
		<div class="hidden xl:block absolute top-3/2 right-0">
			<Image 
			src="/src/assets/desktop/image-host.jpg"
			alt="Logo"
			width="888" 
			height="640"
			/>
		</div>
		<div class="relative z-20 w-[90%] mx-auto">
			<header class=" flex justify-center mt-16 mb-14 md:justify-start">
				<Image 
					src="/src/assets/desktop/logo.svg"
					alt="Logo"
					width="135" 
					height="56"
				/>
			</header>
	
			<Form />
			<div class="hidden md:block bg-tablet-image bg-cover bg-center w-1/2 h-full"></div>
		</div>
		<div class="hidden md:block absolute md:left-0 lg:right-0 bottom-0 lg:bottom-6">
			<DottedPatterns />
		</div>
	</div>
</Layout>
